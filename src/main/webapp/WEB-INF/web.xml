<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<servlet>
		<servlet-name>DadosServlet</servlet-name>
		<servlet-class>br.com.dextra.dexboard.DadosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DadosServlet</servlet-name>
		<url-pattern>/dados/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>br.com.dextra.dexboard.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
